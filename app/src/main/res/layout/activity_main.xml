<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTofrst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="moveToSecAct"
        android:text="Rate our service"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnToSec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnToSec" />

    <Button
        android:id="@+id/btnToSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:onClick="moveTofrstAct"
        android:text="Make an order"
        app:layout_constraintEnd_toStartOf="@+id/btnTofrst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>